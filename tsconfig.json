{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "lib": ["ES2015", "DOM", "DOM.Iterable"],
    "composite": true,
    "baseUrl": ".",
    "module": "es2015",
    "moduleResolution": "bundler",
    "target": "es5",
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
